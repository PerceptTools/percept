      [ glob $(percept-root-src)/adapt/*.cpp ]
      [ glob $(percept-root-src)/adapt/sierra_element/*.cpp ]
      [ glob $(percept-root-src)/adapt/geometry/*.cpp ]
      [ glob $(percept-root-src)/adapt/markers/*.cpp ]

    ]
